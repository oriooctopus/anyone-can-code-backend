{
  "kind": "collectionType",
  "collectionName": "multiple_choice_challenges",
  "info": {
    "name": "MultipleChoiceChallenge",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "options": {
      "type": "component",
      "repeatable": true,
      "component": "multiple-choice-challenge.options",
      "min": 0,
      "required": true
    },
    "prompt": {
      "type": "richtext",
      "required": true,
      "unique": true
    },
    "InternalLabel": {
      "type": "string",
      "private": true
    },
    "canSelectMultipleOptions": {
      "type": "boolean",
      "default": false
    },
    "challengeMeta": {
      "type": "component",
      "repeatable": false,
      "component": "challenge.challenge",
      "required": true
    },
    "useMarkdownForOptionsText": {
      "type": "boolean",
      "default": false
    }
  }
}
